<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Bin2Dec.ViewModels"
        x:Class="Bin2Dec.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Bin2Dec"
        Width="400" Height="300"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" Spacing="10" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <TextBlock Text="Conversor Bin2Dec" 
                   FontSize="20" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>

        <TextBox Name="TxtBinary" 
                 Watermark="Digite atÃ© 8 bits (0 ou 1)" 
                 MaxLength="8"/>

        <Button Name="BtnConverter" 
                Content="Converter" 
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center" 
                Click="OnConvertClick"/>

        <TextBlock Name="LblResult" 
                   Text="Resultado: " 
                   FontWeight="Bold" 
                   Foreground="Blue"
                   HorizontalAlignment="Center"/>
        
    </StackPanel>
</Window>